    <script>
        function checkCredentials() {
            const username = document.forms["login-form"]["username"].value;
            const password = document.forms["login-form"]["password"].value;

            // Define the valid username/password combinations
            const validCredentials = {
                "Nisha": "dyn8001a",
                "Nijhat": "dyn8002c",
                "Chandani": "dyn8003e",
                "Nitesh": "dyn8004g",
                "Shreejak": "8005i",
                "Kritika": "8006k",
                "Samin": "dyn8005m"
            };

            if (validCredentials[username] === password) {
                // Redirect to the respective exam page based on the username
                switch (username) {
                    case "Nisha":
                        window.location.href = "exam_nisha.html"; // Replace with Nisha's exam page URL
                        break;
                    case "Nijhat":
                        window.location.href = "exam_nijhat.html"; // Replace with Nijhat's exam page URL
                        break;
                    case "Chandani":
                        window.location.href = "exam_chandani.html"; // Replace with Chandani's exam page URL
                        break;
                    case "Nitesh":
                        window.location.href = "exam_nitesh.html"; // Replace with Nitesh's exam page URL
                        break;
                    case "Shreejak":
                        window.location.href = "exam_shreejak.html"; // Replace with Shreejak's exam page URL
                        break;
                    case "Kritika":
                        window.location.href = "exam_kritika.html"; // Replace with Kritika's exam page URL
                        break;
                    case "Samin":
                        window.location.href = "exam_samin.html"; // Replace with Samin's exam page URL
                        break;
                }
            } else {
                alert("Invalid username or password. Please try again.");
            }
        }
    </script>
